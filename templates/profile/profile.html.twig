{% extends 'base.html.twig' %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}

    <h2>Mon profil</h2>

    <div class="profileForm">

    <section class="editAvatar">

        <img src="{{ asset('img/profile-picture/' ~ app.user.profilePictureName) }}" class="avatar"/>

        {{ form_start(uploadAvatarForm, {'action': path('profile_picture', {'id': app.user.id}), 'method': 'POST', 'enctype': "multipart/form-data"}) }}

        {{ form_widget(uploadAvatarForm) }}

        <section class="button">
            <button type="submit" class="submit">Enregistrer</button>
        </section>

        {{ form_end(uploadAvatarForm) }}
    </section>

    <section>

    {{ form_start(registrationForm) }}

    {{ form_widget(registrationForm) }}

        <section class="button">
            <button type="submit" class="submit">Enregistrer</button>

            <div class="button_retour">
                <a href="{{ path('main_accueil') }}" title="Accueil"><button type="button" class="retour">Retour</button></a>
            </div>
        </section>

    {{ form_end(registrationForm) }}

    </section>

    </div>



{% endblock %}