{% extends 'base.html.twig' %}



{% block title %}Afficher une sortie
{% endblock %}

{% block body %}

    <h1 class="titreAfficherSortie"> {{ sortie.nom | upper }} </h1>
    <div class="containerSortie">
        <div id="afficherSortie" class="container1sortie">
            <p class="paraAfficherSortie">Nom de la sortie : </p>
            <p class="paraAfficherSortie"> Date : </p>
            <p class="paraAfficherSortie"> Campus : </p>
            <p class="paraAfficherSortie"> Lieu : </p>




        </div>

        <div id="afficherSortie" class="container2sortie">
            <p class="paraAfficherSortie">{{ sortie.nom }}</p>
            <p class="paraAfficherSortie">{{ sortie.dateHeureDebut | date('d/m/Y') }}</p>
            <p class="paraAfficherSortie"> {{ sortie.campus.nom }} </p>
            <p class="paraAfficherSortie"> {{ sortie.lieu.nom }} </p>



        </div>


    </div>
    <div class="containerSortie">
        <div id="afficherSortie" class="container5sortie">

                <div class="formulaireAnnuler">{{ form_start(motifForm) }}


                </div>

            <div class="formulaireAnnuler">
                {{ form_widget(motifForm) }}
            </div>
        </div>




    </div>




    <div class="boutonAfficherSortiesDiv">
        <a href="#" class="boutonAnnulerSortie"><button class="boutonAfficherSorties">Enregistrer</button></a>
        {{ form_end(motifForm) }}
        <a href="{{ path('main_accueil') }}" class="boutonAnnulerSortie"><button class="boutonAfficherSorties">Annuler</button></a>
    </div>
{% endblock %}